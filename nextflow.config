conda.enabled = true
process {
    scratch = true
    process.conda = "$baseDir/custom-conda-env.yml"
    withLabel: pbs_light_job {
        executor = 'pbspro'
        clusterOptions = '-A st-tdjc-1'
        cpus = 2
        memory = 8.GB
        time = '10m'
    }
    withLabel: pbs_full_job {
        executor = 'pbspro'
        clusterOptions = '-A st-tdjc-1'
        cpus = 11
        memory = 64.GB
        time = '2h'
    }
    withLabel: local_job {
        executor = 'local'
    }
}
