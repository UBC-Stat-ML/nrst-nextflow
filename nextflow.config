conda.enabled = true
process {
    errorStrategy = 'ignore'
    scratch = true
    process.conda = "$baseDir/custom-conda-env.yml"
    withLabel: pbs_light_job {
        executor = 'pbspro'
        clusterOptions = '-A st-tdjc-1'
        cpus = 2
        memory = 8.GB
        time = '10m'
    }
    withLabel: pbs_full_job {
        executor = 'pbspro'
        clusterOptions = '-A st-tdjc-1'
        cpus = 9
        memory = 48.GB
        time = '4h'
    }
    withLabel: local_job {
        executor = 'local'
    }
}

executor {
    name = 'pbspro'
    queueSize = 200
}

